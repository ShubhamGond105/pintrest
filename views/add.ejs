<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create New a Post.</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 mt-3 py-2 " type="file" name="postimage">
        <input class="block w-1/3 px-3 mt-3 py-2 border-2 rounded-md" type="text" placeholder="Title" name="title">
      <textarea input class="block w-1/3 h-60 px-3 mt-3 py-2 border-2 rounded-md" type="text" placeholder="description" name="description"></textarea>
        <input class="block w-1/3 px-3 mt-3 bg-red-700 py-2 border-2 rounded-full" type="submit" value="Create Post">
    </form>
</div>

